<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/mainscreen" tools:context=".MainScreen">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/moveQuote">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtQuote"
            android:text="&quot;a quote will go here&quot;"
            android:textSize="58dp"
            android:layout_above="@+id/txtAuthor"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author name goes here"
            android:id="@+id/txtAuthor"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp" />


    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="110dp"
        android:id="@+id/socialmedia"
        android:orientation="horizontal"
        android:gravity="top">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="socialMedia"
            android:id="@+id/facebook"
            android:background="#009688"
            android:layout_gravity="top"
            android:gravity="center">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="socialMedia"
            android:id="@+id/twitter"
            android:background="#3F51B5"
            android:layout_gravity="top"
            android:gravity="center">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/twitter"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="socialMedia"
            android:id="@+id/tumblr"
            android:background="#F44336"
            android:layout_gravity="top"
            android:gravity="center">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/tumblr"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="socialMedia"
            android:id="@+id/plus"
            android:background="#D2E04D"
            android:layout_gravity="top"
            android:gravity="center">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/extra"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>